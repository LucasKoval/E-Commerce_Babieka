<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: 'Sale'}) %>   <!--// partial Head //-->
    <body class="bg-image">
        
        <%- include('../partials/header') %>   <!--// partial Header //-->
        
        <div class="section px-0 py-0 has-text-centered is-full-desktop">
            <img src="/img/img_home_1.jpg" alt="Imagen Home">
        </div>
        
        <%- include('../partials/banner') %>   <!--// partial Banner //-->

        <main>
            
            <section class="section">

                <h1 class="title is-size-1 has-text-centered my-6">SALE</h1>

                <div class="columns is-multiline">
                    <% for (product of saleProducts) { %>
                        <div class="column is-4-tablet is-3-desktop">
                            <div class="card has-text-centered rounded mx-4 my-4">
                                <img src="/img/img_sale.png" alt="Articulo Casual" class="image is-96x96 sale-tag z-index-1">
                                <div class="card-image has-text-centered px-6">
                                    <img src="/img/products/<%= product.model.image.name %>" alt="Articulo Sale">
                                </div>
                                <div class="card-content">
                                    <p class="title is-size-5 mb-2"><%= product.model.name %></p>
                                    <p><%= product.discount.number %>% OFF</p>
                                    <span class="tachado">$ <%= product.price %></span>
                                    <p class="is-size-5">$ <%= product.price-((product.price*product.discount.number)/100) %></p>
                                </div>
                                <footer class="card-footer">
                                    <p class="card-footer-item">
                                        <a href="/producto/<%= product.id %>" class="has-text-grey">Ver</a>
                                    </p>
                                    <p class="card-footer-item">
                                        <a href="#" class="has-text-grey">Agregar al Carrito</a>
                                    </p>
                                </footer>
                            </div>
                        </div>
                    <% } %>
                </div>

            </section>
            
        </main>

        <%- include('../partials/footer') %>   <!--// partial Footer //-->

    </body>




